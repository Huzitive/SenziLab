<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/support_phyphox_hint_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/support_phyphox_hint_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:background="@color/phyphox_white_90"
        android:textColor="@color/phyphox_black_100"
        android:padding="10dp" />

    <ImageView
        android:id="@+id/support_phyphox_hint_arrow"
        android:layout_width="96dp"
        android:layout_height="24dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:scaleX="4"
        app:tint="@color/phyphox_white_90"
        app:srcCompat="@drawable/arrow_bottom" />
</LinearLayout>
